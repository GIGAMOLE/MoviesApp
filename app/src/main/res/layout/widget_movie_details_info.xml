<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_movie_details_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/text_view_movie_details_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:includeFontPadding="false"
        android:textColor="@color/dark_grey"
        android:textIsSelectable="false"
        android:textSize="@dimen/font_medium"
        android:transformPivotX="0dp"
        android:transformPivotY="@dimen/font_medium"
        app:layout_constraintBottom_toTopOf="@id/text_view_movie_details_info_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Blade Runner 2049" />

    <TextView
        android:id="@+id/text_view_movie_details_info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:includeFontPadding="false"
        android:textColor="@color/light_grey"
        android:textIsSelectable="false"
        android:textSize="@dimen/font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Coming in 25.05.18" />
</merge>
